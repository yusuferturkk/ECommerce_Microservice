<div class="col-md-6">
    <h4 class="mb-4">Bir Yorum Bırakın</h4>
    <small>Yorumunuzun alınması için geçerli bir email adresi giriniz.*</small>

    <div class="d-flex my-3">
        <p class="mb-0 mr-2">Ürün puanınız * :</p>
        <div class="text-primary">
            <i class="far fa-star star-rating" data-value="1" onclick="setRating(1)"></i>
            <i class="far fa-star star-rating" data-value="2" onclick="setRating(2)"></i>
            <i class="far fa-star star-rating" data-value="3" onclick="setRating(3)"></i>
            <i class="far fa-star star-rating" data-value="4" onclick="setRating(4)"></i>
            <i class="far fa-star star-rating" data-value="5" onclick="setRating(5)"></i>
        </div>
    </div>

    <form method="post" asp-action="AddComment" asp-controller="ProductList">

        <input type="hidden" name="ProductId" value="@ViewBag.Id" />

        <input type="hidden" name="Rating" id="ratingValue" value="1" />

        <div class="form-group">
            <label for="name">Adınız soyadınız *</label>
            <input type="text" class="form-control" id="name" name="NameSurname" required>
        </div>
        <div class="form-group">
            <label for="email">Email adresiniz *</label>
            <input type="email" class="form-control" id="email" name="Email" required>
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz *</label>
            <textarea id="message" cols="30" rows="5" class="form-control" name="CommentDetail" required></textarea>
        </div>
        <div class="form-group mb-0">
            <input type="submit" value="Yorum Yap" class="btn btn-primary px-3">
        </div>
    </form>
</div>

<script>
    function setRating(value) {
        document.getElementById("ratingValue").value = value;

        var stars = document.getElementsByClassName("star-rating");
        for (var i = 0; i < stars.length; i++) {
            if (i < value) {
                stars[i].classList.remove("far");
                stars[i].classList.add("fas");  
            } else {
                stars[i].classList.remove("fas");
                stars[i].classList.add("far");
            }
        }
    }
</script>