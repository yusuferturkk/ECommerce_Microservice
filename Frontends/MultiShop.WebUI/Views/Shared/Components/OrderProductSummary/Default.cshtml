@model List<BasketItemDto>

<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Sipariş Ürün Listesi</h6>
        @foreach(var item in Model)
        {
            <div class="d-flex justify-content-between">
                <p>@item.ProductName (@item.Quantity)</p>
                <h6>@item.Price ₺</h6>
            </div>
        }        
    </div>
    <div class="border-bottom pb-2">
        <div class="d-flex justify-content-between mb-1">
            <h6>Toplam Ürün Fiyatı</h6>
            <h6>@ViewBag.ProductTotal ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">49 ₺</h6>
        </div>
        <div class="d-flex justify-content-between mb-1">
            <h6 class="font-weight-medium">İndirim Oranı</h6>
            <h6 class="font-weight-medium">% @ViewBag.DiscountRate</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>@ViewBag.FinalTotalPrice ₺</h5>
        </div>
    </div>
</div>