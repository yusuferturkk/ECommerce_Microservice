@model UpdateProductDetailDto

@if (Model != null && !string.IsNullOrEmpty(Model.ProductInformation))
{
    <div class="tab-pane fade" id="tab-pane-2">
        <h4 class="mb-3">Ürün Bilgileri</h4>
        <p>@Model.ProductInformation</p>
    </div>
}
else
{
    <div class="tab-pane fade show active" id="tab-pane-1">
        <p class="text-muted">Bu ürün için henüz bir bilgilendirme girilmemiş.</p>
    </div>
}