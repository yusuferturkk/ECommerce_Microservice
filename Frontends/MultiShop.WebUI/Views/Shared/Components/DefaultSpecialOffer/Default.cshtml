@model List<ResultSpecialOfferDto>

<div class="col-lg-4">
    @foreach (var item in Model)
    {
        <div class="product-offer mb-30" style="height: 200px;">
            <img class="img-fluid" src="@item.ImageUrl" alt="">
            <div class="offer-text">
                <h6 class="text-white text-uppercase">@localizer[item.SubTitle]</h6>
                <h3 class="text-white mb-3">@localizer[item.Title]</h3>
                <a href="" class="btn btn-primary">@localizer["Alışverişe Başla"]</a>
            </div>
        </div>
    }
</div>