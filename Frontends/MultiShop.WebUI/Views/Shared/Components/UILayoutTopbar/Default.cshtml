@using Microsoft.AspNetCore.Http.Extensions

@{
    var returnUrl = Context.Request.GetEncodedPathAndQuery();
}

<div class="container-fluid">
    <div class="row bg-secondary py-1 px-xl-5">
        <div class="col-lg-6 d-none d-lg-block">
            <div class="d-inline-flex align-items-center h-100">
                <a class="text-body mr-3" href=""></a>
                <a class="text-body mr-3" href=""></a>
                <a class="text-body mr-3" href=""></a>
                <a class="text-body mr-3" href=""></a>
            </div>
        </div>

        <div class="col-lg-6 text-center text-lg-right">
            <div class="d-inline-flex align-items-center">

                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">
                        @if (User.Identity.IsAuthenticated)
                        {
                            // Kullanıcı giriş yapmışsa Adı gözüksün
                            <i class="fa fa-user mr-1"></i>
                            @User.Identity.Name
                        }
                        else
                        {
                            // Giriş yapmamışsa "Hesabım" yazsın
                            @localizer["Hesabım"]
                        }
                    </button>
                    <div class="dropdown-menu rounded-0 border-0 m-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            // Giriş yapmış kullanıcı menüsü
                            <a href="/User/Profile/Index" class="dropdown-item">@localizer["Profilim"]</a>
                            <a href="/User/MyOrder/MyOrderList" class="dropdown-item">@localizer["Siparişlerim"]</a>
                            <a href="/User/Login/Logout" class="dropdown-item">@localizer["Çıkış Yap"]</a>
                        }
                        else
                        {
                            // Giriş yapmamış kullanıcı menüsü
                            <a href="/User/Register/SingUp/" class="dropdown-item">@localizer["Kayıt Ol"]</a>
                            <a href="/User/Login/SingIn/" class="dropdown-item">@localizer["Giriş Yap"]</a>
                        }
                    </div>
                </div>
                <div class="btn-group">
                    <div class="dropdown">
                        <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">
                            @localizer["Dil Seçiniz"]
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <form asp-controller="Language" asp-action="ChangeLanguage" method="post">
                                    <input type="hidden" name="culture" value="en" />
                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                    <button type="submit" class="dropdown-item">English</button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Language" asp-action="ChangeLanguage" method="post">
                                    <input type="hidden" name="culture" value="tr" />
                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                    <button type="submit" class="dropdown-item">Türkçe</button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Language" asp-action="ChangeLanguage" method="post">
                                    <input type="hidden" name="culture" value="de" />
                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                    <button type="submit" class="dropdown-item">Deutsch</button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Language" asp-action="ChangeLanguage" method="post">
                                    <input type="hidden" name="culture" value="fr" />
                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                    <button type="submit" class="dropdown-item">Français</button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Language" asp-action="ChangeLanguage" method="post">
                                    <input type="hidden" name="culture" value="it" />
                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                    <button type="submit" class="dropdown-item">Italiano</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="d-inline-flex align-items-center d-block d-lg-none">
                <a href="" class="btn px-0 ml-2">
                    <i class="fas fa-heart text-dark"></i>
                    <span class="badge text-dark border border-dark rounded-circle" style="padding-bottom: 2px;">0</span>
                </a>
                <a href="" class="btn px-0 ml-2">
                    <i class="fas fa-shopping-cart text-dark"></i>
                    <span class="badge text-dark border border-dark rounded-circle" style="padding-bottom: 2px;">0</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
        <div class="col-lg-4">
            <a href="" class="text-decoration-none">
                <span class="h1 text-uppercase text-primary bg-dark px-2">Multi</span>
                <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">Shop</span>
            </a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>