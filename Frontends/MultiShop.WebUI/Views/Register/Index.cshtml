@model CreateRegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>MultiShop Kayıt Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <link rel="stylesheet" type="text/css" href="~/LoginRegister_Template/css/opensans-font.css">
    <link rel="stylesheet" type="text/css" href="~/LoginRegister_Template/fonts/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/LoginRegister_Template/css/style.css" />
    
    <style>
        .text-danger {
            color: #ff0000;
            font-size: 12px;
            margin-top: 5px;
            display: block;
            font-weight: bold;
        }
        .input-validation-error {
            border-bottom: 2px solid #ff0000 !important;
        }
    </style>
</head>
<body class="form-v4">
    <div class="page-content">
        <div class="form-v4-content">
            <div class="form-left">
                <h2>MultiShop E-Ticaret</h2>
                <p class="text-1">MultiShop projemiz üzerinden e-ticaret işlemlerini gerçekleştirebilmek, indirimli ürünler ve fırsatlardan haberdar olmak adına 1 dakikada kayıt işlemini gerçekleştirin.</p>
                <p class="text-2">Eğer bir hesabınız varsa kayıt olmaya gerek duymadan aşağıdaki link üzerinden hemen giriş sayfasına gidebilirsiniz.</p>
                <div class="form-left-last">
                    <a href="/Login/Index/" class="account">Giriş Yap</a>
                </div>
            </div>

            <form class="form-detail" method="post">
                <h2>MultiShop Kayıt Formu</h2>
                
                <div class="form-group">
                    <div class="form-row form-row-1">
                        <label asp-for="Name">Adınız</label>
                        <input type="text" asp-for="Name" class="input-text">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-row form-row-1">
                        <label asp-for="Surname">Soyadınız</label>
                        <input type="text" asp-for="Surname" class="input-text">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <label asp-for="Email">Email Adresi</label>
                    <input type="text" asp-for="Email" class="input-text">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <label asp-for="Username">Kullanıcı Adınız</label>
                    <input type="text" asp-for="Username" class="input-text">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="form-row form-row-1">
                        <label asp-for="Password">Şifre</label>
                        <input type="password" asp-for="Password" class="input-text">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-row form-row-1">
                        <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                        <input type="password" asp-for="ConfirmPassword" class="input-text">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row-last">
                    <button type="submit" name="register" class="register" style="height:35px">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>