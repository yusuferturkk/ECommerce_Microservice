
@{
    ViewData["Title"] = "PaymentSuccess";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid pt-5 pb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">

                <div class="bg-light p-5 rounded shadow-sm">
                    <div class="mb-4">
                        <i class="fa fa-check-circle text-success" style="font-size: 80px;"></i>
                    </div>

                    <h2 class="mb-3">Siparişiniz Alındı!</h2>
                    <p class="lead mb-4">Ödeme işleminiz başarıyla tamamlandı. Siparişinizin durumunu profil sayfanızdan takip edebilirsiniz.</p>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="/Default/Index" class="btn btn-primary py-2 px-4 mr-2">Ana Sayfaya Dön</a>
                        <a href="/User/MyOrder/MyOrderList" class="btn btn-outline-dark py-2 px-4">Siparişlerim</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        Swal.fire({
            title: 'Teşekkürler!',
            text: 'Ödemeniz başarıyla alındı.',
            icon: 'success',
            confirmButtonText: 'Tamam',
            confirmButtonColor: '#FFD333',
            timer: 3000,
            timerProgressBar: true
        });
    });
</script>