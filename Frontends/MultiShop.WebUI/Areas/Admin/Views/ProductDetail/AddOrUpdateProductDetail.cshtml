@model UpdateProductDetailDto

@{
    ViewData["Title"] = "AddOrUpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h4>Ürün Detay İşlemleri</h4>
            <hr />

            <form method="post">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="ProductDetailId" />

                <div class="form-group">
                    <label>Ürün Açıklaması</label>
                    <textarea asp-for="ProductDescription" class="form-control" rows="4"></textarea>
                </div>

                <div class="form-group mt-3">
                    <label>Ürün Bilgisi</label>
                    <textarea asp-for="ProductInformation" class="form-control" rows="4"></textarea>
                </div>

                <div class="mt-3">
                    @if (ViewBag.IsUpdate == true)
                    {
                        <button type="submit" class="btn btn-success btn-rounded">Güncelle</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary btn-rounded">Kaydet</button>
                    }
                </div>
            </form>
        </div>
    </div>
</section>