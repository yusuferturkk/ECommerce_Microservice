@model CreateSentMailDto

@{
    ViewData["Title"] = "SendMail";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mail Gönderme Paneli</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .mail-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            overflow: hidden;
            background: white;
        }

        .card-header-custom {
            background: linear-gradient(45deg, #FFD333, #F5C000); /* Senin tema rengin sarı */
            color: #3D464D;
            padding: 25px;
            text-align: center;
        }

        .form-control:focus {
            border-color: #FFD333;
            box-shadow: 0 0 0 0.2rem rgba(255, 211, 51, 0.25);
        }

        .btn-custom {
            background-color: #3D464D;
            color: white;
            padding: 12px 30px;
            border-radius: 8px;
            transition: all 0.3s;
            border: none;
        }

            .btn-custom:hover {
                background-color: #FFD333;
                color: #3D464D;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>

    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="col-md-8 col-lg-6">

            @if (TempData["MailStatus"]?.ToString() == "Success")
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i> Mail başarıyla gönderildi!
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["MailStatus"]?.ToString() == "Error")
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> Hata: @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card mail-card">
                <div class="card-header-custom">
                    <h3 class="mb-0 fw-bold"><i class="fas fa-paper-plane me-2"></i>Yeni Mail Gönder</h3>
                    <p class="mb-0 mt-2 opacity-75">Kullanıcılara hızlıca e-posta iletin</p>
                </div>

                <div class="card-body p-5">
                    <form method="post">

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Alıcı E-Posta</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-envelope text-muted"></i></span>
                                <input type="email" asp-for="ReceiverMail" class="form-control bg-light border-start-0" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Konu</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-tag text-muted"></i></span>
                                <input type="text" asp-for="Subject" class="form-control bg-light border-start-0" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Mesaj İçeriği</label>
                            <textarea asp-for="MessageContent" class="form-control bg-light" rows="6" required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom fw-bold shadow-sm">
                                <i class="fas fa-paper-plane me-2"></i> Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4 text-muted small">
                &copy; @DateTime.Now.Year MultiShop Admin Paneli
            </div>

        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>