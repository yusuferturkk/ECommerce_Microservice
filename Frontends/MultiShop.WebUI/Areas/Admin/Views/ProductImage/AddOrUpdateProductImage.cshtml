@model UpdateProductImageDto

@{
    ViewData["Title"] = "AddOrUpdateProductImage";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Görselleri Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProductImageId" />
                        <input type="hidden" asp-for="ProductId" />
                        <div class="col-md-12">
                            <fieldset class="form-group">
                                <label>Ürün Görseli - 1</label>
                                <input type="file" class="form-control" name="file1" asp-for="ProductImage1" />
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset class="form-group">
                                <label>Ürün Görseli - 2</label>
                                <input type="file" class="form-control" name="file2" asp-for="ProductImage2" />
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset class="form-group">
                                <label>Ürün Görseli - 3</label>
                                <input type="file" class="form-control" name="file3" asp-for="ProductImage3" />
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset class="form-group">
                                <label>Ürün Görseli - 4</label>
                                <input type="file" class="form-control" name="file4" asp-for="ProductImage4" />
                            </fieldset>
                        </div>
                        <div class="mt-3">
                            @if (ViewBag.IsUpdate == true)
                            {
                                <button type="submit" class="btn btn-success btn-rounded">Güncelle</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary btn-rounded">Kaydet</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>