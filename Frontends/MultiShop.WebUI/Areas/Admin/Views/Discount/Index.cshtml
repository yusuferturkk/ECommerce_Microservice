@model List<ResultCouponDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="hoverable-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kupon Kodu</th>
                                <th>Kupon Oranı</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.CouponCode</td>
                                    <td>@item.CouponRate</td>
                                    <td>@item.CouponIsActive</td>
                                    <td><a href="/Admin/Discount/DeleteDiscount/@item.CouponId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Discount/UpdateDiscount/@item.CouponId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Discount/CreateDiscount/" class="btn btn-primary">Yeni Kupon Tanımla</a>
                </div>
            </div>
        </div>
    </div>
</section>