@model List<ResultProductsWithCategoryDto>

@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="hoverable-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>Ürün Kategori</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Ürün Görselleri</th>
                                <th>Açıklama ve Bilgi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td><a href="/Admin/ProductImage/AddOrUpdateProductImage/@item.ProductId" class="btn btn-warning btn-rounded">Ürün Görselleri</a></td>
                                    <td><a href="/Admin/ProductDetail/AddOrUpdateProductDetail/@item.ProductId" class="btn btn-info btn-rounded">Açıklama ve Bilgi</a></td>
                                    <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success btn-rounded">Güncelle</a></td>
                                    <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger btn-rounded">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Product/CreateProduct/" class="btn btn-primary btn-rounded">Yeni Ürün Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>