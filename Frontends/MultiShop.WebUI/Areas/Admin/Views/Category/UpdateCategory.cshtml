@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Kategori Güncelleme Sayfası</h4>
        <div class="row">
            <form method="post" enctype="multipart/form-data">
                <div class="col-md-12">
                    <fieldset class="form-group">
                        <input type="hidden" asp-for="CategoryId" />
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" />
                    </fieldset>
                </div>
                <div class="col-md-12">
                    <fieldset class="form-group">
                        <label for="exampleInputFile">Kategori Görsel</label>
                        <input type="file" id="exampleInputFile" name="formFile" />
                    </fieldset>
                </div>
                <button class="btn btn-primary btn-rounded">Kategoriyi Güncelle</button>
            </form>
        </div>
    </div>
</div>