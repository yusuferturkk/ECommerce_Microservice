<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Spica Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/Spica_UserTemplate/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Spica_UserTemplate/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Spica_UserTemplate/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Spica_UserTemplate/images/favicon.png" />

    <style>
        .text-danger {
            color: #ff0000;
            font-size: 12px;
            margin-top: 5px;
            display: block;
            font-weight: bold;
        }

        .input-validation-error {
            border-bottom: 2px solid #ff0000 !important;
        }

        .validation-summary-errors ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .validation-summary-errors li {
            color: #ff0000;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <div class="container-scroller d-flex">
        <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img src="~/Spica_UserTemplate/images/logo-dark.svg" alt="logo">
                            </div>
                            <h4>Hoşgeldin!</h4>
                            <h6 class="font-weight-light">Seni tekrar aramızda görmek güzel!</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label for="exampleInputEmail">Adınız</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" asp-for="Name" placeholder="Adınız...">
                                        <span class="form-control-lg border-left-0 text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Soyadınız</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" asp-for="Surname" placeholder="Soyadınız...">
                                        <span class="form-control-lg border-left-0 text-danger" asp-validation-for="Surname"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Kullanıcı Adı</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" asp-for="Username" placeholder="Kullanıcı adınız...">
                                        <span class="form-control-lg border-left-0 text-danger" asp-validation-for="Username"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail">Email Adresi</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" asp-for="Email" placeholder="Email adresi...">
                                        <span class="form-control-lg border-left-0 text-danger" asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword">Şifre</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="password" class="form-control form-control-lg border-left-0" asp-for="Password" placeholder="Şifreniz...">
                                        <span class="form-control-lg border-left-0 text-danger" asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword">Şifre Doğrulama</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="password" class="form-control form-control-lg border-left-0" asp-for="ConfirmPassword" placeholder="Şifreniz...">
                                        <span class="form-control-lg border-left-0 text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                </div>
                                <div class="my-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Bir hesabınız var mı? <a href="/User/Login/SingIn" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 register-half-bg d-none d-lg-flex flex-row">
                        <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; @DateTime.Now.Year Tüm hakları sakldır.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/Spica_UserTemplate/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <script src="~/Spica_UserTemplate/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- inject:js -->
    <script src="~/Spica_UserTemplate/js/off-canvas.js"></script>
    <script src="~/Spica_UserTemplate/js/hoverable-collapse.js"></script>
    <script src="~/Spica_UserTemplate/js/template.js"></script>
    <!-- endinject -->
</body>
</html>