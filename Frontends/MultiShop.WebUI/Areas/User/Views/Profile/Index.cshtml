@model ResultUserDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Güncelleme</h4>
            <p class="card-description">Kullanıcı Profili</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Adınız</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Soyadınız</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Surname">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Username">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Mail Adresi</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Telefon Numarası</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="PhoneNumber">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Ülke</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Country">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Şehir</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="City">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">İnternet Sayfası</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Website">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Biografi</label>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Bio">
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>